$bgMain = #FFFFFF
$bgOverlay = #FFFFFF
$bgHighlight = #f0f2f4
$textNormal = #32393d
$textSubdued = #94999c
$textTranslation = #A63A37
$linkColor = #008fd5
$borderNormal = 1px solid #e1e6e9

html, body {
    margin: 0;
    background-color: $bgHighlight;
    color: $textNormal;
    font-family: Lucida Grande,Lucida Sans Unicode,Arial,sans-serif;
}
ul {
    list-style: none;
    padding-left: 0;
}
.close {
    position: absolute;
    top: 0;
    right: 6px;
    color: $textSubdued;
    font-size: 18px;
    padding: 12px;
}
.close:hover {
    cursor: pointer;
}

