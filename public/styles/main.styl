$img = '../img'

$bgMain = #FFFFFF
$bgOverlay = #FFFFFF
$bgHighlight = #f0f2f4
$textNormal = #32393d
$textSubdued = #94999c
$textTranslation = #A63A37
$linkColor = #008fd5
$borderNormal = 1px solid #e1e6e9
$unknownColor = #ff9800
$knownColor = #4caf50

$darkGray = #0C121B
$gray = #69818D
$lightGray = #BFD8D7
$red = #DC5B74
$darkRed = #5C2631
$yellow = #F1DC65
$darkYellow = #BF9919

a {
    cursor: pointer;
}
.styClose {
    position: absolute;
    top: 0;
    right: 6px;
    color: $textSubdued;
    font-size: 18px;
    padding: 12px;
}
.styClose {
    margin-right: -48px;
    margin-top: 12px;
    font-size: 36px;
}
.styClose:hover {
    cursor: pointer;
}

footer {
    border-top: 0.4rem solid $gray;
}

@font-face {
    font-family: 'GOVERNOR';
    font-style: normal;
    font-weight: normal;
    src: local('GOVERNOR'), url('../fonts/governor.ttf') format('ttf');
}

html {
    font-size: 16px;
    line-height: 1.5em;
}

body {
    font-family: Futura, Open Sans, sans-serif;
    color: $darkGray;

    background: $lightGray;

    .main {
        min-height: 580px;
        background: $darkGray;
        padding-bottom: 8.5em;

        .btn {
            padding: 2px 20px;
        }
    }

    .mask {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: #fff;
        text-align: center;
        padding-top: 3em;
        font-size: 16px;
    }

    .btn.callToAction {
        font-family: GOVERNOR, Open Sans, sans-serif !important;
        color: #fff !important;
        background-color: $red !important;
        padding: 0.5em;
    }
}


