<div class="btn-group">
    <button type="button" class="prev btn btn-primary" label="previous line">
        <span class="glyphicon glyphicon-step-backward"></span>
    </button>
    <button type="button" class="togglePlay btn btn-primary" label="toggle play"">
        <span class="glyphicon {{#if playing}}glyphicon-pause{{else}}glyphicon-play{{/if}}"></span>
    </button>
    <button type="button" class="next btn btn-primary" label="next line">
        <span class="glyphicon glyphicon-step-forward"></span>
    </button>
</div>