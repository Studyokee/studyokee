.subtitles-scroller {
    overflow: hidden;
    position: relative;
    font-size: 1.4em;

    .gradient {
        z-index: 4;
        height: 100px;
        width: 100%;
        position: absolute;
        bottom: 0;

        /* Gradient */
        background: -webkit-linear-gradient(rgba(255,255,255,0), rgba(255,255,255,1.0) 80%); /* For Safari and Chrome */
        background: -o-linear-gradient(rgba(255,255,255,0), rgba(255,255,255,1.0) 80%); /* For Opera 11.1 to 12.0 */
        background: -moz-linear-gradient(rgba(255,255,255,0), rgba(255,255,255,1.0) 80%); /* For Firefox 3.6 to 15 */
        background: linear-gradient(rgba(255,255,255,0), rgba(255,255,255,1.0) 80%); /* Standard syntax */
    }

    .list-group-item.active {
        z-index: 2;
        color: #ffffff;

        a {
            color: #ffffff;
        }
        a:hover, a:active {
            color: #ffffff;
        }
        .translated-subtitle {
            color: #dddddd;
        }
        .in-english {
            color: #fff;
        }
    }
    .in-english {
        left: 0;
        position: absolute;
        top: 0;
        padding: 2px 20px;
        z-index: 3;
        height: 100%;
        font-size: 0.6em;
        border-radius: 0;
    }
    .in-english:hover {
        background: transparent;
        cursor: default;
        color: #fff;
        background-color: #666;
    }
    .in-english:focus {
        background: transparent;
    }
    .rollover-mask {
        display: none;
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: #333;
        opacity: 0.95;
        z-index: 2;
    }
    .rollover-text {
        text-align: center;
        color: #fff;
        line-height: 75px;
    }
    .list-group-item {
        border: none;
        border-radius: 4px;
        text-align: center;
        padding: 27px 15px;
    }

    .no-subtitles {
        padding: 16px;
        text-align: center;
    }
    .subtitles li {
        line-height: 32px;
        overflow: hidden;
        white-space: nowrap;
    }
    .subtitles a {
        text-decoration: none;
        color: #666666;
    }
    .subtitles a:hover {
        color: #2196f3;
    }
}