.subtitles-scroller {
    overflow: hidden;

    .list-group-item.active {
        z-index: 2;
        color: #ffffff;
        background-color: #2c3e50;
        border-color: #2c3e50;

        a {
            color: #ffffff;
        }
        a:hover, a:active {
            color: #ffffff;
        }
    }
    .list-group-item {
        border: none;
        border-radius: 4px;
        text-align: center;
    }

    .no-subtitles {
        padding: 0 16px;
        text-align: center;
    }
    .subtitles li {
        line-height: 32px;
        overflow: hidden;
        white-space: nowrap;
    }
    .subtitles a {
        text-decoration: none;
    }
    .subtitles a:hover {
        cursor: pointer;
        text-decoration: underline;
        color: $textNormal;
    }
    .timestamp {
        color: #FF0000;
        margin-left: 12px;
    }
}