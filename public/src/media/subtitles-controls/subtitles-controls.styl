.controls {
    .progress-container {
        margin-bottom: 8px;
    }
    .progress {
        position: relative;
        overflow: visible;
        border-radius: 0;
        display: inline-block;
        margin-left: 80px;
        padding-top: 7px;
        background: transparent;

        .progress-bar {
            -webkit-transition: none; */
            -o-transition: none;
            /* transition: none; */
            height: 12px;
        }
        .progress-timer {
            position: absolute;
            font-size: 13px;
            left: 0;
            margin-left: -66px;
            line-height: 20px;
            line-height: 14px;
        }
    }
    .step-buttons {
        margin-left: 20px;
        margin-right: 20px;
    }
    .toggle-translation {
        position: absolute;
        right: 20px;
    }
    .btn-info, .btn-info.active {
        color: $gray-darker;
    }
}