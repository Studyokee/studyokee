.subtitles-scroller {
    overflow: hidden;
    position: relative;
    font-size: 1.4rem;

    .list-group-item {
        border: none;
        text-align: center;
        padding: 1rem;
        background-color: $gray-light;

        .original-subtitle {
            height: 2rem;
            margin-bottom: 1rem;
        }

        a {
            text-decoration: none;
            border-bottom: 0.2rem solid $red;
            display: inline-block;
            color: $gray-dark;
        }
        a.known {
            border-color: $darkYellow;
        }
        a.unknown {
            border-color: $red;
        }
        a:hover, a:active {
            color: $gray-darker;
        }
    }
    .list-group-item.active {
        background-color: $gray-lighter;
    }

    .no-subtitles {
        padding: 1rem;
        text-align: center;
    }
    .subtitles li {
        overflow: hidden;
        white-space: nowrap;
    }
}