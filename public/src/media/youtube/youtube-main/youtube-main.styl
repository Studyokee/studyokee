.youtube-main {
    .video-player-container {
        text-align: center;
        margin-bottom: 15px;
    }

    .subtitles-scroller {
        height: 320px;

        .subtitles li {
            line-height: 24px;
        }
        .translated-subtitle {
            visibility: hidden;
        }
    }
    .subtitles-scroller.show-translation .translated-subtitle {
        visibility: visible;
    }
    .badge.unknown {
        background-color: $unknownColor;
    }
    .badge.learned {
        background-color: $knownColor;
    }
    .badges li {
        display: inline-block;
        padding: 8px 16px;
    }
    
}