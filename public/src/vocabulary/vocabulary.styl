.vocabulary {
    li {
        display: block;
        position: relative;
        width: 480px;
        height: 320px;
    }
    .btn {
        width: 100%;
        height: 100%;
        padding: 0;
    }
    .wordOrPhrase {
        font-size: 32px;
        line-height: 320px;
    }
    .definition {
        font-size: 32px;
        line-height: 320px;
    }
    .remove {
        top: 8px;
        position: absolute;
        right: 16px;
        opacity: 1;
        color: #fff;
        font-weight: 400;
        font-size: 40px;
        background: transparent;
        border: none;
        display: inline-block;
        padding: 8px;
    }
    .remove:hover {
        color: #cc0000;
        text-shadow: none;
    }
}