.dictionary {
    padding: 8px;
    font-size: 14px;
    background-color: $bgMain;

    h3 {
        font-weight: normal;
        color: #94999c;
        display: inline-block;
        line-height: 40px;
        vertical-align: top;
        margin: 0;
    }

    p {
        margin-top: 0;
    }

    .directions {
        color: #94999c;
        font-size: 12px;
    }

    .close {
        display: none;
    }
}