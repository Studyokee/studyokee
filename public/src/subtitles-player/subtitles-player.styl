.player {
    position: relative;
    background-color: $bgMain;

    .subtitlesContainer {
        border-bottom: $borderNormal;
        position: relative;
        overflow: hidden;
        height: 424px;

        .spinner {
            margin-top: 128px;
        }
    }
    .controlsContainer {
        text-align: center;
        padding: 16px;
        height: 40px;
    }
    .instructions {
        font-size: 14px;
        padding: 12px;
        color: $textSubdued;
    }
    .currentSongContainer {
        padding: 8px;
        overflow: hidden;
        white-space: nowrap;

        h3 {
            color: $textSubdued;
            display: inline-block;
            font-size: 14px;
            line-height: 40px;
            vertical-align: top;
            margin: 0;
            font-weight: normal;
        }

        .song {
            padding: 4px;
            display: inline-block;
            vertical-align: top;
            width: 300px;

            .icon {
                float: left;
                margin-right: 8px;
                display: block;
                height: 32px;
                width: 32px;
            }
            .trackName {
                font-size: 14px;
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
            }
            .artist {
                color: $textSubdued;
                font-size: 12px;
                font-style: italic;
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
            }
        }
    }
    
}