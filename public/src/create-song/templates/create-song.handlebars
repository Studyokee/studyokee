<div class="col-lg-6">
    <form>
        <fieldset>
            <legend>Create Song</legend>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-lg-6 col-lg-offset-6">
                        <button class="btn btn-default cancel">Cancel</button> 
                        <button type="submit" class="btn btn-primary save">Save</button> 
                    </div>
                </div>
                <div class="form-group">
                    <label for="trackName" class="col-lg-6 control-label">Track Name</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="trackName" placeholder="Track Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="artist" class="col-lg-6 control-label">Artist</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="artist" placeholder="Artist">
                    </div>
                </div>
                <div class="form-group">
                    <label for="language" class="col-lg-6 control-label">Language of Song</label>
                    <div class="col-lg-6">
                        <select class="form-control" id="language">
                            <option value="fr">French</option>
                            <option value="es">Spanish</option>
                            <option value="de">German</option>
                        </select>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
</div>