<div class="form-horizontal">
    <div class="form-group">
        <label for="trackName" class="col-lg-3 control-label">Track Name</label>
        <div class="col-lg-9">
            <input type="text" class="form-control" id="trackName" placeholder="Track Name" autocomplete="off">
        </div>
    </div>
    <div class="form-group">
        <label for="artist" class="col-lg-3 control-label">Artist</label>
        <div class="col-lg-9">
            <input type="text" class="form-control" id="artist" placeholder="Artist" autocomplete="off">
        </div>
    </div>
    <div class="form-group">
        <label for="language" class="col-lg-3 control-label">Language of Song</label>
        <div class="col-lg-9">
            <select class="form-control" id="language">
                <option value="fr">French</option>
                <option value="es">Spanish</option>
                <option value="de">German</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="youtubeKey" class="col-lg-3 control-label">Youtube Link</label>
        <div class="col-lg-9">
            <input type="text" class="form-control" id="youtubeKey" placeholder="https://www.youtube.com/watch?v=..." autocomplete="off">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-6 col-lg-offset-3">
            <button class="btn btn-default cancel">Cancel</button> 
            <button type="submit" class="btn btn-primary save">Create</button> 
        </div>
    </div>
</div>