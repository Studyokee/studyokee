.songList {
    background-color: $bgMain;
    
    .noSongs {
        margin: 8px;
    }
    
    ul {
        margin: 0;
    }
    a {
        display: list-item;
        cursor: pointer;
    }
    a:hover, a:active {
        background-color: $bgHighlight;
        color: $linkColor;
    }

    .song {
        padding: 4px 8px;

        .icon {
            float: left;
            margin-right: 8px;
            display: block;
            height: 32px;
            width: 32px;
        }
        .content {
            margin-left: 40px;
            width: 100%;
        }
        .trackName {
            font-size: 14px;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }
        .artist {
            color: $textSubdued;
            font-size: 12px;
            font-style: italic;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }
    }
}