<div class="col-lg-6">
    <form>
        <fieldset>
            <legend>Create Classroom</legend>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-lg-6 col-lg-offset-6">
                        <button class="btn btn-default cancel">Cancel</button> 
                        <button type="submit" class="btn btn-primary save">Save</button> 
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="col-lg-6 control-label">Name</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="name" placeholder="Name" value="{{data.name}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="language" class="col-lg-6 control-label">Language Being Taught</label>
                    <div class="col-lg-6">
                        <select class="form-control" id="language">
                            <option value="en">English</option>
                            <option value="fr">French</option>
                            <option value="es">Spanish</option>
                        </select>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
    <form>
        <fieldset>
            <div class="form-group">
                <label class="control-label">Add Song</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="songToAdd" placeholder="Song Id">
                    <span class="input-group-btn">
                        <button class="btn btn-default add" type="button">Add</button>
                    </span>
                </div>
            </div>
        </fieldset>
    </form>
    <h3>Songs</h3>
    <div class="songListContainer"></div>
</div>