.center.presentation-mode {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    padding: 60px 20px;
    z-index: 100;
    background-color: #FFFFFF;
    
    .youtube-main {
        .video-player-container {
            .video-player {
                #ytPlayer {
                    width: 100%;
                }
            }
        }

        .subtitles-scroller {
            height: 480px;

            .subtitles li {
                line-height: 48px;
                font-size: 32px;
            }
        }
    }
}
