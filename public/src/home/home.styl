.home {
    text-align: center;

    .callout h2 {
        margin-top: 4rem;
        margin-bottom: 3.6rem;
        border-bottom: 0.4rem solid $yellow;
        padding-bottom: 0.6rem;
    }
    .highlights h3 {
        font-size: 1.2rem;
        margin-top: 3.25em;
    }
    .callout {
        margin-bottom: 4.1rem;
    }
    .highlights .illustrationContainer {
        width: 16rem;
        height: 16rem;
        border-radius: 50%;
        background-color: $gray-light;
        display: inline-block;
        border: 0.4rem solid $gray;
    }
    .highlights .illustration {
        margin-top: 3rem;
        width: 10rem;
        height: 10rem;
        background-image: url(../../img/studyokee_icons.png);
        background-size: 100%;
        display: inline-block;
    }
    .highlights .illustration.musicVideo {
        background-position: 0 10rem;
    }
    .highlights .illustration.vocabBuilder {
        background-position: 0 20rem;
    }
    .highlights .illustration.metrics {
        background-position: 0 0;
    }
    .btn.callToAction {
        border-width: 0.4rem;
        padding: 0.9rem 1.5rem 0.6rem;
        font-size: 1.2rem;
    }
}