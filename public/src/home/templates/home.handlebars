<div class="home container">
    <div class="callout">
        <div class="row">
            <div class="col-md-2"><div class="headerIllustration"></div></div>
            <div class="col-md-8">
                <h2>Spanish Vocabulary Through Song</h2>
                {{#if user.id}}
                <a href="/classrooms/language/es/en" class="signup btn callToAction btn-primary" role="button">Get Started <i class="glyphicon glyphicon-arrow-right" aria-hidden="true"></i></a>
                {{else}}
                <a href="/try" class="signup btn callToAction btn-primary" role="button">Try It Out!</a>
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;or</span>
                <a href="/login" class="signup btn callToAction btn-link">Create Account</a>
                {{/if}}
            </div>
            <div class="col-md-2"><div class="headerIllustration"></div></div>
        </div>
    </div>
    <div class="row highlights">
        <div class="col-md-4">
            <div class="illustrationContainer hidden-xs">
                <span class="illustration musicVideo"></span>
            </div>
            <h3>Music videos with scrolling lyrics</h3>
        </div>
        <div class="col-md-4">

            <div class="illustrationContainer hidden-xs">
                <span class="illustration vocabBuilder"></span>
            </div>
            <h3>Add words to vocabulary builder</h3>
        </div>
        <div class="col-md-4">

            <div class="illustrationContainer hidden-xs">
                <span class="illustration metrics"></span>
            </div>
            <h3>Track learning with metrics</h3>
        </div>
    </div>
</div>