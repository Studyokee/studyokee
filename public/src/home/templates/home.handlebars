<div class="main">
    <div class="col-lg-12">
        <h4>Select a classroom or <button class="btn btn-default createClassroom">New Classroom</button></h4>
        <ul class="nav nav-pills col-lg-6">
            {{#each data}}
                <li>
                    <a class="classroomLink" data-index="{{@index}}">
                        <div class="title">
                            {{name}}
                        </div>
                        <div class="description text-muted">
                            <em>{{language}}</em>
                        </div>
                    </a>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="footerContainer">
