.spinnerContainer {
    height: 100%;
    width: 100%;
    background-color: $bgMain;
}
.spinner {
    height: 30px;
    width: 30px;
    background-image: url($img + '/loading.png');
    -webkit-animation:spin 0.6s infinite steps(11);
    margin-left: auto;
    margin-right: auto;
    margin-top: 16px;
    margin-bottom: 16px;
}
@-webkit-keyframes spin {
    from {background-position:0px 0;}
    to {background-position:-330px 0;}
}
.rdioLink {
    position: absolute;
    top: -1px;
    right: 0;
}
.footer {
    margin: 16px 8px;
    
    .disclaimers {
        color: $textSubdued;
        padding-bottom: 16px;
        font-size: 12px;
        clear: both;
    }
}