<ul>
    {{#each suggestions}}
        <li>
            <a class="media suggestion" data-index="{{@index}}">
                <img class="icon" src="{{icon}}"/>
                <div class="content">
                    <div class="trackName">
                        {{name}}
                    </div>
                    <div class="artist">
                        {{artist}}
                    </div>
                </div>
            </a>
        </li>
    {{/each}}
</ul>