html, body {
    margin: 0;
    background-color: $bgMain;
    color: $textNormal;
    font-family: Lucida Grande,Lucida Sans Unicode,Arial,sans-serif;
}
ul {
    list-style: none;
    padding-left: 0;
}
.hidden {
    display: none;
}
.close {
    position: absolute;
    top: 0;
    right: 6px;
    color: $textSubdued;
    font-size: 18px;
    padding: 12px;
}
.close:hover {
    cursor: pointer;
}

.mainPage {
    min-width: 640px;

    .header {
        border-bottom: $borderNormal;
        box-shadow: 0 0 5px 0 $bgHighlight;
        height: 50px;

        .searchContainer {
            display: inline-block;
        }
        .title {
            text-align: center;
            margin-left: 240px;
        }
        .titleText {
            font-size: 28px;
            line-height: 50px;
        }
        .subtitle {
            font-size: 12px;
            line-height: 50px;
            color: $textSubdued;
        }
        .leftHeader {
            position: absolute;
            margin-left: 16px;
        }
        .settingsContainer {
            display: inline-block;
        }
    }

    .main {
        position: relative;

        .menu {
            float: left;
            width: 240px;
        }

        .centerRight {
            margin-left: 240px;
            margin-right: 120px;

            .playerContainer {
                border-left: $borderNormal;
                border-bottom: $borderNormal;
                border-right: $borderNormal;

                .controlsContainer {
                    text-align: center;
                    padding: 16px;
                    height: 85px;
                }
            }

            .rdioLink {
                position: absolute;
                top: -1px;
                right: 0;
            }
        }

        .disclaimersContainer {
            margin: 16px;
            margin-top: 32px;
        }
        .disclaimers {
            color: $textSubdued;
            margin-bottom: 16px;
            font-size: 12px;
            clear: both;
        }
    }
}