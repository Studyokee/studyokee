.subtitles-scroller {
    overflow: hidden;
    position: relative;
    font-size: $font-size-large;
    margin: $padding-md;
    
    .glyphicon-refresh {
        text-align: center;
        width: 100%;
        padding: 100px;
        font-size: 60px;
    }

    .list-group-item {
        border: 3px solid transparent !important;
        border-top: 3px solid transparent !important;
        text-align: center;
        padding: 1rem;
        background-color: $gray-lighter;
        color: $gray-dark;
        cursor: pointer;

        .original-subtitle {
            height: 2rem;
            margin-bottom: 1rem;
        }
        .translated-subtitle {
            height: 2rem;
        }
        a {
            text-decoration: none;
            border-bottom: 0.2rem solid transparent;
            display: inline-block;
            color: $gray-dark;
        }
        a.known {
            border-color: $knownColor;
        }
        a.unknown {
            border-color: $unknownColor;
        }
        a:hover, a:active {
            color: $gray-darker;
        }
    }
    .list-group-item.active {
        color: $gray-dark;
        background-color: #fff;
        border: 3px solid darken($gray-lighter, 10) !important;
        border-top: 3px solid darken($gray-lighter, 10) !important;
    }

    .no-subtitles {
        padding: 1rem;
        text-align: center;
    }
    .subtitles li {
        overflow: hidden;
        white-space: nowrap;
    }
    @media (max-width: $screen-sm-min) {
        font-size: $font-size-small;
    }
}