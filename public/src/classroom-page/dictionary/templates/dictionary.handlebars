<div class="panel-heading">
    <h4>Dictionary</h4>
</div>
<div class="panel-body">
    <div class="lookup">
        {{#if word}}
            {{#with word}}
                <b>"{{word}}"</b>
                <div>
                    <p>
                        <b>{{def}}</b>,&nbsp;<i class="wordType">{{part}}</i>
                    </p>
                    <p><b>ex.</b> {{example}}</p>
                </div>
            {{/with}}
        {{else}}
            {{#if noResult}}
                <span class="text-muted">No result</span>
            {{else}}
                <span class="text-muted">Click on a word to lookup its definition</span>
            {{/if}}
        {{/if}}
    </div>
</div>