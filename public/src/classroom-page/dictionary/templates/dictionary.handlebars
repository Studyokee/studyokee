<div class="panel-heading">
    <h4>
        <button type="button" class="makeCard btn btn-primary" data-toggle="modal" data-target="#makeCardModal" title="Make a New Vocabulary Card">Make Card</button>
        <div class="modal fade" id="makeCardModal" tabindex="-1" role="dialog">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Make a Card</h4>
              </div>
              <div class="modal-body">
                <p><input class="cardWord" value="{{lookup}}"/></p>
                <textarea class="cardDef" placeholder="Enter in the text for this card"></textarea>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary saveCard">Save changes</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
        Dictionary
    </h4>
</div>
<div class="panel-body">
    {{#if isDE}}
        {{#if lookup}}
            <p>
                <a href="#" class="lookupEmbed">"{{lookup}}"</a>
            </p>
            <div class="embeddedLookup"><iframe src="http://dict.tu-chemnitz.de/?mini=1&query={{lookup}}" width="100%" height="400" frameborder="0" id="dictionaryIframe"></iframe></div>
        {{else}}
            <span class="text-muted explanation">Click on a word to lookup its definition</span>
        {{/if}}
    {{else}}
        <div class="lookup">
            {{#with dictionaryResult }}
                <p><b>"{{word}}"</b></p>
                <div>
                    <p>
                        <b>{{def}}</b>{{#if part}},&nbsp;<i class="wordType">{{part}}</i>{{/if}}
                    </p>
                    {{#if example}}<p><b>ex.</b> {{example}}</p>{{/if}}
                </div>
            {{/with}}
        </div>
    {{/if}}
</div>