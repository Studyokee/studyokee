.youtube-sync {
    .video-player-container {
        text-align: center;
        margin-bottom: -34px;
    }

    #ytPlayer {
        height: 240px;
        width: 320px;
        min-height: 200px;
        min-width: 200px;
    }
    .progress {
        width: 320px;
        margin: 0 auto 2px auto;
    }

    .subtitles-container {
        margin-top: 4px;
    }

    .youtube-sync-subtitles {
        height: 208px;
        overflow: hidden;

        .gradient {
            z-index: 2;
            height: 70px;
            width: 100%;
            position: absolute;
            bottom: 0;

            /* Gradient */
            background: -webkit-linear-gradient(rgba(255,255,255,0), rgba(255,255,255,1.0) 80%); /* For Safari and Chrome */
            background: -o-linear-gradient(rgba(255,255,255,0), rgba(255,255,255,1.0) 80%); /* For Opera 11.1 to 12.0 */
            background: -moz-linear-gradient(rgba(255,255,255,0), rgba(255,255,255,1.0) 80%); /* For Firefox 3.6 to 15 */
            background: linear-gradient(rgba(255,255,255,0), rgba(255,255,255,1.0) 80%); /* Standard syntax */
        }
        .list-group-item {
            border: none;
            border-radius: 4px;
            text-align: center;
        }
        .no-subtitles {
            padding: 0 16px;
            text-align: center;
        }
        .subtitles li {
            line-height: 24px;
            white-space: nowrap;
            font-size: 14px;
            width: 424px;
            margin-left: 72px;
            color: $textSubdued;
        }
        .subtitles li.active {
            background-color: #fff;
            color: $textNormal;
        }
        .insertAfter, .insertBefore {
        }
        .insertLine {
            margin: 2px 0 2px 72px;
            width: 408px;
        }
        .openInsert {
            margin: 2px 0 2px 72px;
            width: 408px;
        }
        .toggleSync {
            margin: 4px 0;
        }

        .action {
            position: absolute;
            top: 0;
            right: 0;
            float: none;
        }
        .action.remove {
            margin-right: -72px;
            margin-top: -5px;
            font-size: 36px;
            color: $textSubdued;
            padding: 4px;
        }
        .action.edit {
            margin-right: -32px;
            margin-top: 10px;
        }
        .action:hover {
            cursor: pointer;
        }
        .subtitle-timestamp {
            margin-left: -72px;
            position: absolute;
            left: 0;
            font-size: 14px;
        }
    }
}
