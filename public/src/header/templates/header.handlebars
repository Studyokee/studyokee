<div class="navbar navbar-default">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-responsive-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand"><span class="brandName">Studyokee:</span> <small class="text-muted">learning with pop songs</small></a>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav navbar-left">
            <li class="dropdown selectLanguage">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Language: <span class="languageIcon"></span> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    {{#each supportedLanguages}}
                        <li><a href="/classrooms/language/{{language}}/en" data-index="{{@index}}"><span class="languageIcon {{language}}"></span>&nbsp;&nbsp;&nbsp;{{display}}</a></li>
                    {{/each}}
                </ul>
            </li>
            <li><a href="/classrooms/language/{{fromLanguage.language}}/en" class="openClassrooms">Classrooms</a></li>
            <li><a href="/classrooms/create" class="createClassroom">New Classroom</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            {{#if user.id}}
            <li>
                <a href="#">
                    Hello, {{user.firstName}}
                    <span class="center-cropped icon">
                        <img src="{{user.photo}}"/>
                    </span>
                </a>
            </li>
            <li>
                <a href="/logout">Log Out</a>
            </li>
            {{else}}
            <li>
                <a href="/auth/facebook">Login with Facebook</a>
            </li>
            {{/if}}
        </ul>
    </div>
</div>
