<div class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/" class="navbar-brand"><span class="icon"></span><span class="brandName">Studyokee</span></a>
        </div>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav navbar-left">
                <li><a href="/" class="openClassrooms">Classroom Library</a></li>
                <li class="dropdown selectLanguage">
                    <a href="/" class="dropdown-toggle" data-toggle="dropdown">Quick Classroom <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        {{#each classrooms}}
                            <li><a href="/classrooms/{{classroomId}}">{{name}}</a></li>
                        {{/each}}
                    </ul>
                </li>
                <li class="vocabulary-link"><a href="/vocabulary/{{fromLanguage}}/{{toLanguage}}" class="vocabulary">Vocabulary <span class="badge" {{#unless vocabularyCount}}style="display:none;"{{/unless}}>{{vocabularyCount}}</span></a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {{#if user.id}}
                <li>
                    <a href="#">
                        Hello, {{user.firstName}}
                    </a>
                </li>
                <li>
                    <a href="/logout">Log Out</a>
                </li>
                {{else}}
                <li>
                    <a href="/login" class="login link">Login</a>
                </li>
                <li class="connectingWord">or</li>
                <li>
                    <a href="/signup" class="signup btn callToAction" role="button">Sign Up</a>
                </li>
                {{/if}}
            </ul>
        </div>
    </div>
    <div class="headerBottom"></div>
</div>
