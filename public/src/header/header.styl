header {
    .navbar {
        border: 0;
        margin-bottom: 0;
    }
    .navbar .btn.callToAction {    
        margin: 0.2rem;
        font-size: 0.9rem;
        padding: 0.7rem 0.6rem 0.3rem 0.6rem;
        border-width: 0;
        color: #fff;
    }
    .navbar .btnLink {
        padding: 0.1rem;
    }
    .btn {
        text-transform: none;
        text-align: left;
    }
    .navbar .navbar-header .navbar-brand {
        height: 0;    
        margin-top: 0.75rem;
        margin-left: 0;
        margin-right: 2em;
    }
    .navbar-nav > li > a {
        padding-top: 0.9rem;
    }

    .navbar-brand .icon {
        background-image: url(../img/studyokee_logo.svg);
        height: 1.2em;
        width: 1.3em;
        display: inline-block;
        background-repeat: no-repeat;
        float: left;
        margin-top: -1px;
    }
    .navbar-toggle .icon-bar {
        height: 3px;
    }
    .navbar-nav > li > a.dropdown-toggle, .navbar-nav > li > a.userInfoDrawer {
        padding-bottom: 10px;
    }

    .brandName {
        font-family: GOVERNOR, Open Sans, sans-serif;
    }
    .connectingWord {
        line-height: 2rem;
        padding: 0.75rem 1.2rem 0 0;
        font-size: 0.8rem;
        color: $gray;
    }
    .headerBottom {    
        height: 5px;
        background-image: url("../img/studyokee_header_border.png");
        width: 100%;
        background-size: 100%;
        position: absolute;
        bottom: -5px;
    }
    .badge {
        background-color: $gray;
        margin-top: -1px;
    }
    .badge.throb {
        animation: shadowThrob 0.9s 1;
        animation-direction: alternate;
        -webkit-animation: shadowThrob 0.9s ease-out 1;
        -webkit-animation-direction: alternate;
    }
    .popover-content {
        min-width: 200px;
    }
    #password {
        -webkit-text-security: disc;
        -moz-text-security: disc;
        text-security: disc;
    }
    @keyframes shadowThrob {
        from {box-shadow: 0 0 0 0 rgba(190,190,190, 0.9);}
        to {box-shadow: 0 0 30px 10px rgba(190,190,190, 0.2);}
    }
    @-webkit-keyframes shadowThrob {
        from {box-shadow: 0 0 0 0 rgba(190,190,190, 0.9);}
        to {box-shadow: 0 0 30px 10px rgba(190,190,190, 0.2);}
    }
}