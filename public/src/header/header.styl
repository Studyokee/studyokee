header {
    .navbar {
        background-color: $lightGray;
        border-radius: 0;
        border: 0;
        margin-bottom: 0;
    }
    .navbar-nav>li>a.link {
        font-family: Futura, Open Sans, sans-serif;
        color: $gray;
        padding-top: 16px;
    }
    .btn.callToAction {
        margin-top: 0.5em;
        font-size: 0.9em;
        padding: 0.8em 0.5em 0.4em 0.5em;
    }
    .navbar {
        background-color: $lightGray;
    }

    .navbar-brand .icon {
        background-image: url(../img/studyokee_logo.svg);
        height: 1.2em;
        width: 1.3em;
        display: inline-block;
        background-repeat: no-repeat;
        float: left;
        margin-top: -1px;
    }
    .navbar-toggle .icon-bar {
        height: 4px;
    }

    .brandName {
        font-family: GOVERNOR, Open Sans, sans-serif;
        color: $gray;
        font-size: 1.1em;
        line-height: 1.2em;
    }
    .connectingWord {
        line-height: 50px;
        padding: 2px 20px 0 0;
        color: $gray;
        font-size: 0.8em;
    }
    .headerBottom {    
        height: 4px;
        background-image: url("../img/studyokee_header_border.png");
        width: 100%;
        background-size: 100%;
    }
    .badge {
        background-color: $unknownColor;
        margin-top: -1px;
    }
    .badge.throb {
        animation: shadowThrob 0.9s 1;
        animation-direction: alternate;
        -webkit-animation: shadowThrob 0.9s ease-out 1;
        -webkit-animation-direction: alternate;
    }
    @keyframes shadowThrob {
        from {box-shadow: 0 0 0 0 rgba(190,190,190, 0.9);}
        to {box-shadow: 0 0 30px 10px rgba(190,190,190, 0.2);}
    }
    @-webkit-keyframes shadowThrob {
        from {box-shadow: 0 0 0 0 rgba(190,190,190, 0.9);}
        to {box-shadow: 0 0 30px 10px rgba(190,190,190, 0.2);}
    }
}