.classroom {
    .menu {
        background-color: $gray-light;
    }
    .menuContent {
        margin-top: 1.2rem;
        margin-bottom: 1.2rem;
        
        h2 {
            margin: 0;
            color: $gray-dark;
        }
    }
    .panel {
        border-width: 0;
        background-color: $gray-lighter;
        box-shadow: none;
    }
    .panel-heading {
        border-width: 0;
    }
    .center .panel {
        border-bottom: 0.4rem solid #536670
        margin-top: 1.3rem;
    }
    .center {
        margin-top: 2rem;
    }
    .mediaItemLink {
        cursor: pointer;
    }
    .mediaItemLink:hover {
        background-color: $gray-light;
    }
    .songSelection {
        float: right;
    }
    .dropdown-menu {
        width: 400px;
    }
    .btn-info, .open > .dropdown-toggle.btn-info {
        color: $gray-lighter;
        background-color: $gray;
    }
    .video-player-container {
        text-align: center;
        margin-bottom: 1rem;
    }

    .subtitles-scroller {
        height: 29rem;

        .translated-subtitle {
            visibility: hidden;
        }
    }
    .subtitles-scroller.show-translation .translated-subtitle {
        visibility: visible;
    }
    .badge.unknown {
        background-color: $unknownColor;
    }
    .badge.learned {
        background-color: $knownColor;
    }
    .badges li {
        display: inline-block;
        padding: 8px 16px;
    }
    .pencilIllustration {
        width: 100%;
    }
    .progress {
        width: 320px;
        margin: 0 auto 2px auto;
        height: 12px;
        margin-bottom: 6px;
    }
}
