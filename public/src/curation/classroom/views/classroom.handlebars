<div class="classroom">
    <div class="container menu">
        <div class="col-md-6 col-md-offset-3 menuContent">
            <div class="dropdown songSelection">Song: 
                <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    {{currentSong.metadata.trackName}} by {{currentSong.metadata.artist}} <span class="caret"></span>
                </button>
                <div class="mediaItemListContainer dropdown-menu"></div>
            </div>
            <h2><a href="/classrooms/{{data.classroomId}}">{{data.name}}</a></h2>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="center container">
        <div class="col-md-8">
            <div class="controls-container"></div>
            <div class="player-container"></div>
        </div>
        <div class="col-md-4">
            <div class="video-player-container"></div>
            <div class="dictionaryContainer"></div>
            <img src="../../../img/pencils.png" class="pencilIllustration">
        </div>
    </div>
</div>