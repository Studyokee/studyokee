<div class="col-lg-6 createClassroom">
    <form>
        <fieldset>
            <legend>Create Classroom</legend>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-lg-6 col-lg-offset-6">
                        <button class="btn btn-default cancel">Cancel</button> 
                        <button type="submit" class="btn btn-primary save">Save</button> 
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="col-lg-6 control-label">Name</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="name" placeholder="Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="language" class="col-lg-6 control-label">Language Being Taught</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="language" value="{{fromLanguage.display}}" readonly>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
</div>