.mediaItem {
    padding: 4px;
    display: inline-block;
    vertical-align: top;
    width: 100%;

    .icon {
        float: left;
        margin-right: 8px;
        display: block;
        height: 32px;
        width: 32px;
        border: none;
    }
    .title {
        font-size: 14px;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }
    .description {
        color: $textSubdued;
        font-size: 12px;
        font-style: italic;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }
}