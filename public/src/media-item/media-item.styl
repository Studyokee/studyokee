.mediaItem {
    display: inline-block;
    vertical-align: top;
    width: 100%;

    .icon {
        float: left;
        margin-right: 8px;
        display: block;
        width: 42px;
        border: none;
    }
    .center-cropped {
        overflow: hidden;
    }
    .center-cropped img {
        height: 42px;
        background-position: center center;
        background-repeat: no-repeat;
    }
    .title {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }
    .description {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }
}