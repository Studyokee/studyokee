<div class="toStudy">
    <ul class="cards flip-container">
        {{#each words}}
            <li class="card flipper">
                <div class="front panel panel-link">
                    <div class="flipBody panel-body">
                        <div class="wordOrPhrase">{{word}}</div>
                    </div>
                </div>
                <div class="back panel panel-link">
                    <div class="flipBody panel-body">
                        <div class="wordOrPhrase">{{word}}</div>
                        <div class="definitions">
                            <p>
                                <b>{{def}}</b>{{#if part}},&nbsp;<i class="wordType">{{part}}</i>{{/if}}
                            </p>
                            {{#if example}}
                                <p><b>ex.</b> {{example}}</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </li>
        {{/each}}
    </ul>
</div>