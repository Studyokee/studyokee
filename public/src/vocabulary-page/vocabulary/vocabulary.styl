.vocabulary-page {
    padding-top: 1em;
    position: relative;
    
    .vocabularyStats {
        padding-bottom: 32px;
    }
    
    .vocabularyBtns {
        margin: 16px 0 32px 0;
    }
    .vocabularyBtns .btn {
        margin-top: 16px;
    }
    .importModal textarea {
        width: 100%;
        height: 10em;
    }
    
    @media (max-width: $screen-sm-min) {
        .vocabularyContentContainer {
            padding: 0;
        }
        .collapseStatsBtn {
            float: right;
            margin-top: 10px;
        }
        h4.visible-xs-block {
            margin-bottom: $padding-md;
        }
    }
    #makeCardModal textarea {
        width: 100%;
        height: 8rem;
        padding: 1rem;
    }
    .makeCard {
        float: right;
    }
    h4 {
        line-height: 40px;
        margin-bottom: 0;
    }
}