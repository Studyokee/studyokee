.controls {
    .step-buttons {
        margin-left: 20px;
        margin-right: 20px;
    }
    .toggle-translation {
        float: right;
    }
    .btn-info.active {
        background-color: $gray-dark;
        color: $gray-lighter;
    }
    .popover {
        font-size: $font-size-small;
    }
    @media (max-width: $screen-sm-min) {
        .toggle-translation {
            position: initial;
        }
        .btn {
            min-width: 3.5em;
        }
    }
    .uk.flag {
        background-image: url(../../../../img/ukflag_small.png);
        background-repeat: no-repeat;
        padding: 0;
        width: 30px;
        height: 20px;
        min-width: 0;
        margin-top: 8px;
        border-radius: 0;
    }
    .uk.flag.active {
        opacity: 0.6;
    }
}
    
